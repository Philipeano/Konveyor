<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Konveyor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Konveyor</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Konveyor - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    @* Being modal popup *@
    <div class="modal fade" tabindex="-1" id="genericModal" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-sm" style="">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">@ViewBag.ModalTitle</h4>
                    @*<button type="button" class="close" data-dismiss="modal">×</button>*@
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <span class="form-control" style="border:none; font-size:18px; padding:0px;">@ViewBag.ModalMessage</span>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <form id="genericModalForm" asp-action="Delete">
                        <input name="hdnModalRouteParam" type="hidden" value="@ViewBag.ModalValue">
                        <button type="submit" id="btnProceed" class="btn btn-primary button button4">Proceed</button>
                        <button type="button" id="btnHideModal" class="btn btn-secondary button button4" data-dismiss="modal">Cancel</button>
                        @*<a id="btnProceed" class="btn btn-primary button button4" href="customers/delete/@ViewBag.ModalValue">Proceed</a>*@
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
