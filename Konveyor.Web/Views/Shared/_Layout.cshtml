        //        $("#genericModal").modal('show');
        //    });

        //    $("#btnHideModal").click(function () {
        //        $("#genericModal").modal('hide');
        //    });
        //});

        function showModal(routeInfo) {
            /**/
            console.log("Selected Customer ID: " + routeInfo);
            /**/
            $("#hdnModalRouteParam").val(routeInfo);
            $("#genericModal").modal('show');
        }

        //function postModal(routeInfo) {
        //    $("form#genericModalForm").submit(function (e) {
        //        if (routeInfo == null || routeInfo == 0) {
        //            e.preventDefault();
        //        }
        //        else {
        //            $("input#hdnModalRouteParam").val(routeInfo);
        //        }
        //    })
        //}
    </script>
    @* End modal popup *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
